<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MovilLamb" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="10" >

        <EditText
            android:id="@+id/etPaciente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blanco"
            android:ems="10"
            android:hint="Paciente"
            android:inputType="textPersonName"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:weightSum="10" >

            <Button
                android:id="@+id/btParto"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:text="Labor de Parto"
                android:layout_weight="5" />

            <Button
                android:id="@+id/btCamino"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="En Camino" 
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.70"
            android:weightSum="10" >

            <Button
                android:id="@+id/btEmergencia"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="Emergencia" 
                 />

            <Button
                android:id="@+id/btConsejo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="Consejo" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
